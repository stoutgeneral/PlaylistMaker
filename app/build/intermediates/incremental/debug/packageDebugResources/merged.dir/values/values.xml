<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="YP_black">#1A1B22</color>
    <color name="YP_blue">#3772E7</color>
    <color name="YP_light_gray">#E6E8EB</color>
    <color name="YP_text_gray">#AEAFB4</color>
    <color name="YP_white">#FFFFFFFF</color>
    <color name="black">#000000</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <dimen name="basic_text_size">22sp</dimen>
    <dimen name="distance_between_elements">8dp</dimen>
    <dimen name="high_padding">24dp</dimen>
    <dimen name="icon_offset_from_text">8dp</dimen>
    <dimen name="low_padding">16dp</dimen>
    <dimen name="medium_padding">18dp</dimen>
    <dimen name="rounding_buttons">16dp</dimen>
    <dimen name="text_size_additional_screens">16sp</dimen>
    <string name="app_name">Playlist Maker</string>
    <string name="dark_theme">Темная тема</string>
    <string name="email">gnganggang@gmail.com</string>
    <string name="library">Медиатека</string>
    <string name="message">Спасибо разработчикам и разработчицам за крутое приложение!</string>
    <string name="search">Поиск</string>
    <string name="settings">Настройки</string>
    <string name="share_app">Поделиться приложением</string>
    <string name="share_link">https://practicum.yandex.ru/android-developer/</string>
    <string name="theme_message">Сообщение разработчикам и разработчицам приложения Playlist Maker</string>
    <string name="user_agreement">Пользовательское соглашение</string>
    <string name="user_agreement_link">https://yandex.ru/legal/practicum_offer/</string>
    <string name="write_support">Написать в поддержку</string>
    <style name="ArrowBackButton">
        <item name="android:layout_width">@dimen/high_padding</item>
        <item name="android:layout_height">@dimen/high_padding</item>
        <item name="android:layout_marginStart">@dimen/low_padding</item>
        <item name="android:layout_marginTop">@dimen/low_padding</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>
    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/rounding_buttons</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_offset_from_text</item>
        <item name="iconTint">@color/YP_black</item>
    </style>
    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>
    <style name="LocationSettingsItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/medium_padding</item>
        <item name="android:layout_marginBottom">@dimen/medium_padding</item>
    </style>
    <style name="PanelHeaderNameActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
    </style>
    <style name="SwitchOnOffActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/switch_off</item>
    </style>
    <style name="TextActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/low_padding</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/text_size_additional_screens</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/YP_blue</item>
        <item name="colorPrimaryVariant">@color/YP_white</item>
        
        <item name="colorSecondary">@color/YP_black</item>
        <item name="colorSecondaryVariant">@color/YP_text_gray</item>
        <item name="colorOnBackground">@color/YP_light_gray</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>