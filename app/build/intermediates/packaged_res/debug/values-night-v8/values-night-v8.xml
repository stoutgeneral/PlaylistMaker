<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:tint">@color/YP_white</item>
    </style>
    <style name="SwitchOnOffActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:src">@drawable/switch_on</item>
    </style>
    <style name="TextActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/low_padding</item>
        <item name="android:textColor">@color/YP_white</item>
        <item name="android:textSize">@dimen/text_size_additional_screens</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/YP_black</item>
        <item name="colorPrimaryVariant">@color/YP_black</item>
        
        <item name="colorSecondary">@color/YP_white</item>
        <item name="colorSecondaryVariant">@color/YP_black</item>
        <item name="colorOnBackground">@color/YP_white</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>