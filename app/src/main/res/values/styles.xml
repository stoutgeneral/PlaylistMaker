<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainActivity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/YP_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/rounding_buttons</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/offset_from_text</item>
        <item name="iconTint">@color/YP_black</item>
    </style>

    <style name="TextActivitySettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/low_padding</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/text_size_additional_screens</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="LocationSettingsItems">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/medium_padding</item>
        <item name="android:layout_marginBottom">@dimen/medium_padding</item>
    </style>

    <style name="ImageSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_gravity">end|bottom</item>
    </style>

    <style name="ArrowBackButton">
        <item name="android:layout_width">@dimen/high_padding</item>
        <item name="android:layout_height">@dimen/high_padding</item>
        <item name="android:layout_marginStart">@dimen/low_padding</item>
        <item name="android:layout_marginTop">@dimen/low_padding</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorSecondary</item>
    </style>

    <style name="PanelHeaderNameActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
    </style>

    <style name="TrackCardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SmallButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/high_padding</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="NamesAdditionalInformation">
        <item name="android:textColor">@color/YP_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    
    <style name="ContentAdditionalInformation">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="TabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TabIndicator" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    
    <style name="PlaylistInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
    </style>

    <style name="PlaylistRv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/text_size_low</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="AllertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/YP_white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertBodyText</item>
    </style>

    <style name="MaterialAlertTitleText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/YP_black</item>
    </style>

    <style name="MaterialAlertBodyText" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
    </style>

</resources>