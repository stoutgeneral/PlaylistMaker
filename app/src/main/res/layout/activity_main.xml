<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YP_blue"
    android:orientation="vertical"
    android:paddingStart="@dimen/low_padding"
    android:paddingEnd="@dimen/low_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="12dp"
        android:text="@string/app_name"
        android:textColor="@color/YP_white"
        android:textSize="@dimen/basic_text_size" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/high_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_white"
        android:text="@string/search"
        android:textAllCaps="false"
        android:textColor="@color/YP_black"
        android:textSize="@dimen/basic_text_size"
        app:cornerRadius="@dimen/rounding_buttons"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_offset_from_text"
        app:iconTint="@color/YP_black" />

    <Button
        android:id="@+id/library_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/low_padding"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_white"
        android:text="@string/library"
        android:textAllCaps="false"
        android:textColor="@color/YP_black"
        android:textSize="@dimen/basic_text_size"
        app:cornerRadius="@dimen/rounding_buttons"
        app:icon="@drawable/library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_offset_from_text"
        app:iconTint="@color/YP_black" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/low_padding"
        android:layout_marginBottom="28dp"
        android:layout_weight="1"
        android:backgroundTint="@color/YP_white"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/YP_black"
        android:textSize="@dimen/basic_text_size"
        app:cornerRadius="@dimen/rounding_buttons"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_offset_from_text"
        app:iconTint="@color/YP_black" />

</LinearLayout>