<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingStart="@dimen/low_padding"
    android:paddingEnd="@dimen/low_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="12dp"
        android:text="@string/app_name"
        android:textColor="@color/YP_white"
        android:textSize="@dimen/basic_text_size"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"/>

    <Button
        style="@style/ButtonMainActivity"
        android:id="@+id/search_button"
        android:layout_marginTop="@dimen/high_padding"
        android:text="@string/search"
        app:icon="@drawable/search" />

    <Button
        style="@style/ButtonMainActivity"
        android:id="@+id/library_button"
        android:layout_marginTop="@dimen/distance_between_elements"
        android:text="@string/library"
        app:icon="@drawable/library"/>

    <Button
        style="@style/ButtonMainActivity"
        android:id="@+id/settings_button"
        android:layout_marginTop="@dimen/distance_between_elements"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/settings"/>

</LinearLayout>