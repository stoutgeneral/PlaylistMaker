<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/track_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="@dimen/distance_between_elements"
        android:layout_marginStart="13dp"
        android:src="@drawable/placeholder"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offset_from_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="250dp"
            android:layout_height="19dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="?attr/colorSecondary"
            android:textSize="@dimen/text_size_additional_screens"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Track Name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/artist_name"
                android:layout_gravity="start"
                style="@style/TrackCardText"
                tools:text="Artist Name"
                app:drawableEndCompat="@drawable/ic"/>

            <TextView
                android:id="@+id/track_time"
                style="@style/TrackCardText"
                tools:text="Track time"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:src="@drawable/arrow_forward" />

</LinearLayout>